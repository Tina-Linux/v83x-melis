include $(TOPDIR)/mk/config.mk
LIB	=  libcommon.o


COBJS	+= string.o
COBJS	+= printf.o
COBJS   += boot_utils.o
COBJS   += eabi_compat.o
COBJS   += malloc.o
COBJS   += crc32.o

ifdef CFG_SUNXI_SPINOR

ifdef CFG_SPINOR_ENV
COBJS   += env_spinor.o
endif

ifdef CFG_SUNXI_FREERTOS
COBJS   += rtos_spinor.o
endif

endif # CFG_SUNXI_SPINOR

ifdef CFG_SUNXI_GUNZIP
COBJS   += gunzip.o
COBJS   += zlib/zlib.o
endif

ifdef CFG_SUNXI_LZ4
COBJS   += lz4/lz4_wrapper.o
endif

ifdef CFG_SUNXI_ZSTD
COBJS   += zstd/huf_decompress.o
COBJS   += zstd/decompress.o
COBJS   += zstd/entropy_common.o
COBJS   += zstd/fse_decompress.o
COBJS   += zstd/zstd_common.o
COBJS   += xxhash.o
endif

ifdef CFG_SUNXI_LZMA
COBJS   += lzma/LzmaDec.o
COBJS   += lzma/LzmaTools.o
endif

ifdef CFG_SUNXI_MEMOP
COBJS   += memset_sunxi.o
COBJS   += memcpy_sunxi.o
endif
COBJS   += debug.o

ifdef CFG_SUNXI_SPINOR_SPL_GPT
COBJS   += part_efi_nor.o
endif

SRCS	:= $(COBJS:.o=.c) $(SOBJS:.o=.S)
OBJS	:= $(addprefix $(obj),$(COBJS) $(SOBJS))

all:	 $(LIB)

$(LIB):	$(OBJS)
	$(call cmd_link_o_target, $(OBJS))

#########################################################################

# defines $(obj).depend target
include $(TOPDIR)/mk/rules.mk

sinclude .depend

#########################################################################
