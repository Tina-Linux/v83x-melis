include $(MELIS_BASE)/scripts/Makefile.common
OBJCOPYFLAGS    := -S -O elf32-littlearm -R .note -R .comment -R COMMON -R .ARM.attributes -R .en_frame --gap-fill=0xff

always += $(MOD_NAME).$(SUF_NAME)

obj-m += $(MOD_NAME).o

lnkflags-y +=	-N \
		--gc-sections -cref \
		-T $(obj)/lds/linker.lds \
		-Map=$(obj)/linker.map

usrlibs-y +=	-L$(srctree)/$(elibrary-libs) \
		-L$(srctree)/$(elibrary-libs)/3rd \
		-L$(srctree)/$(eboard-libs) \
		-L$(srctree)/scripts

$(obj)/$(MOD_NAME).$(SUF_NAME) :%.$(SUF_NAME) :%.o FORCE
	$(call if_changed,objcopy)
	@cp -f $@ $(PRJ_PATH)
	@cp -f $@ $(TEMP_PATH)
	@mv $< $(<:.o=.elf)
	@$(SIZE)  $(<:.o=.elf)
